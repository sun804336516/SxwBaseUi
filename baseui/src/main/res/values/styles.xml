<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_46</item>
        <item name="android:background">@drawable/white_drawable_5</item>
        <item name="android:textSize">@dimen/textsize_21</item>
        <item name="android:textColor">@color/_333333</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonButtonWidthHeight">
        <item name="android:layout_width">@dimen/space_96</item>
        <item name="android:layout_height">@dimen/space_33</item>
    </style>

    <style name="ClickButtonStyle" parent="CommonButtonWidthHeight">

        <item name="android:background">@drawable/bg_clickbutton</item>
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SeekBarStyleHorizontal">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:maxHeight">@dimen/space_4</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_bg_horizontal</item>
        <item name="android:minHeight">@dimen/space_2</item>
        <item name="android:thumb">@drawable/seekbar_thumb_horizontal</item>
        <item name="android:thumbOffset">0.0dp</item>
    </style>

    <style name="SeekBarStyleVertical">
        <item name="android:maxHeight">@dimen/space_6</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_bg_vertical</item>
        <item name="android:minHeight">@dimen/space_6</item>
        <item name="android:thumb">@drawable/seekbar_thumb_vertical</item>
        <item name="android:thumbOffset">0.0dp</item>
    </style>


    <!--无效 不知道为什么  可能是自定义tab的原因-->
    <style name="StockTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/textsize_15</item>
        <item name="android:textColor">@color/white</item>
    </style>
