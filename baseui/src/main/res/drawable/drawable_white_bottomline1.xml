<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--下层画布，全白色-->
    <item>
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
    <!--上层画布，红色边框，宽度1dp；左、右、下设置margin，为啥是-5而不是-1，后边解释-->
    <item
        android:bottom="0dp"
        android:left="-10dp"
        android:right="-10dp"
        android:top="-10dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/gray" />
        </shape>
    </item>
</layer-list>